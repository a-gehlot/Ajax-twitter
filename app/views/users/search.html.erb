<h1>Search!</h1>

<nav class="users-search">
  <input 
    type="text"
    name="username"
    placeholder="Enter user">
  <ul class="users"></ul>
</nav>

<ul>
  <% @users.each do |user| %>
    <li>
      <a href="<%= user_url(user) %>"><%= user.username %></a>
      <%= render 'follows/form', user: user %>
    </li>
  <% end %>
</ul>
