<!DOCTYPE html>
<html>

  <head>
    <title>AjaxTwitter</title>
    <%= csrf_meta_tags %>


    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>  
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fredoka:wght@300;600&display=swap" rel="stylesheet">

  </head>

  <body>
    <header>
      <nav class="main-nav">
        <h1 class="logo">Twitter Clone</h1>
        <ul class="links">
          <li><a href="<%= feed_url %>">Feed</a></li>
          <li><a href="<%= search_users_url %>">User Search</a></li>
              <li><% if current_user %>
                <form action="/session" method="POST">
                  <input type="hidden" name="_method" value="DELETE">
                  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
              
                  <input class="logout" type="submit" value="Logout">
                </form>
                <% end %>
              </li>
        </ul>
      </nav>
    </header>

    
    <%= yield %>
  </body>
  <script type="text/javascript" src="/app/assets/javascripts/cssrefresh.js"></script>

</html>
